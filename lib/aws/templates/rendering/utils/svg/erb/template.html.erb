<%#-*- coding: UTF-8 -*-%>
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script>
  <%= javascript %>  	
</script>

<style>
path {
    cursor: pointer;
}

.selected {
    stroke: yellow;
    stroke-width: 8;
    stroke-linejoin: round;
}

polygon {
    cursor: pointer;
}

.row {
    fill: lightcoral;
    stroke: coral;
    stroke-linejoin: round;
}

.fade-away {
    transition: all .3s  ease-in-out; /* Animation */
    opacity: 0.3;
    z-index: -20;
    transform-origin: center center;
    transform: scale(0.99);
}

.fade-back {
    transition: all .1s  ease-in-out; /* Animation */
    opacity: 1;
    z-index: 20;
    transform-origin: center center;
    transform: scale(1);
}

.edge-hidden {
    transition: all .3s  ease-in-out; /* Animation */
    z-index: -20;
    opacity: 0;
}

.edge-showed {
    transition: all .1s  ease-in-out; /* Animation */
    z-index: 20;
    opacity: 1;
}

.edge-showed * {
    stroke: black;
}

.edge-showed polygon {
	fill: black;
}
</style>
</head>
<body>
    <%= image %>
</body>
</html>

